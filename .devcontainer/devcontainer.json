{
    "name": "Stereo Cup Demo",
    "image": "mcr.microsoft.com/devcontainers/cpp:1-ubuntu-24.04",
    "features": {
        "ghcr.io/devcontainers/features/cmake:1": {
            "version": "latest"
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libopencv-dev",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake"
            ]
        }
    }
}
